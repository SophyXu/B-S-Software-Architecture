doctype html
html
    head
        meta(charset='UTF-8')
        title Online Chess Game
        link(rel='stylesheet', type='text/css', href='/static/css/style.css')
        link(rel='stylesheet', type='text/css', href='/static/css/bootstrap.min.css')
body(style='background-image:url(/static/image/choose_background.jpg); background-repeat:no-repeat')
    .col-md-4
    .col-md-4(style='padding-top: 100px;')
        .panel.panel-default(style='background-color:rgba(240,240,240,0.4);')
            .panel-body
                form(role='form', method='post', action='/register/create')
                    .form-group
                        label User Name
                        input.form-control.center-block(maxlength='30', type='text', placeholder='Enter User Name', name='user')
                    .form-group
                        label Password
                        input.form-control.center-block(maxlength='30', type='password', placeholder='Enter Password', name='pass')
                    .form-group
                        label Confirm Password
                        input.form-control.center-block(maxlength='30', type='password', placeholder='Enter Password again', name='passRe')
                    .form-group
                        label Email
                        input.form-control.center-block(maxlength='30', type='text', placeholder='Enter Email Address', name='email')
                    h2
                    h3
                    button.btn.btn-warning.btn-block(type="submit") Register
                    h5
                form(action='/')
                    button.btn.btn-default.btn-block(type='submit') Back

            script.
                var signal = #{signal};
                if (signal == 0) {
                } else if(signal == 1) {
                    alert('User Name cannot be null.');
                } else if(signal == 2) {
                    alert('Password cannot be null.');
                } else if(signal == 3) {
                    alert('Password does not match the confirm password. Try again~');
                }else if(signal == 4) {
                    alert('User Name already exists.');
                }

